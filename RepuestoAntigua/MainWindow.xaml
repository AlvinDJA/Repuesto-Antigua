<Window x:Class="RepuestoAntigua.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepuestoAntigua"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <StackPanel>
            <StackPanel Orientation = "Horizontal">
                <Menu Height="18">
                    <MenuItem Header="_Registros"  >
                        <MenuItem x:Name="rUsuariosItem" Header="Registro de Usuarios" Click="rUsuariosItem_Click" />
                    </MenuItem>
                </Menu>

                <Menu Height="18">
                    <MenuItem Header="Consultas"> 
                        <MenuItem x:Name="cUsuariosItem" Header="Consulta de usuarios"  Click="cUsuariosItem_Click"/>
                    </MenuItem>
                </Menu>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
